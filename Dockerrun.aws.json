{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "omarsalka/client",
      "hostname": "client",
      "essential": false,
      "memory": 160
    },
    {
      "name": "server",
      "image": "omarsalka/server",
      "hostname": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "omarsalka/nginx-letsencrypt",
      "hostname": "nginx-letsencrypt",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "links": ["client", "server"],
      "memory": 128
    }
  ]
}
